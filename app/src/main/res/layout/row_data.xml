<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp">

        <ImageView
            android:id="@+id/image_feeds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:alpha="0.9"
            android:foreground="@drawable/bg_gradient"/>

        <ImageButton
            android:id="@+id/share_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_forward"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/user_image_circle"
            android:layout_above="@+id/uploadedby"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/uploadedby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textSize="12sp"
            android:fontFamily="@font/righteous"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"
            android:background="@null"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/likesNo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/likesNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.6k"
            android:textColor="#808080"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/like_button"
            android:textSize="12sp"
            android:layout_marginRight="5dp" />
</RelativeLayout>