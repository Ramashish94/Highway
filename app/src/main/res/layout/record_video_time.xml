<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Video Time"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/josefin_regular"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>

    <RadioGroup
        android:id="@+id/record_video_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/thirty_seconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 Seconds"
            android:fontFamily="@font/josefin_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="start"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/sixty_seconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60 Seconds"
            android:fontFamily="@font/josefin_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="start"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/ninty_seconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="90 Seconds"
            android:fontFamily="@font/josefin_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="start"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/josefin_regular"
        android:textStyle="bold"
        android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>