                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_weight="5"
                    android:background="@null"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"

                            android:text="Role"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_20" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radiogroup_Role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_5"
                        android:orientation="horizontal">



                            <RadioButton
                                android:id="@+id/radio_Customer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="onUserRadioButtonClicked"
                                android:text="Customer"
                                tools:ignore="OnClick" />

                            <RadioButton
                                android:id="@+id/radio_Driver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="onUserRadioButtonClicked"
                                android:text="Driver"
                                tools:ignore="OnClick" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_MillUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onUserRadioButtonClicked"
                            android:text="MillUser "
                            tools:ignore="OnClick" />

                        <RadioButton
                            android:id="@+id/radio_Owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onUserRadioButtonClicked"
                            android:text="Owner "
                            tools:ignore="OnClick" />
                        </LinearLayout>
                    </RadioGroup>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_10">

                    <TextView
                        android:id="@+id/txtUserAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="Address "
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp">

                    <EditText
                        android:id="@+id/edtTxtInputUserAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_100"
                        android:background="@drawable/input_round_shape"
                        android:gravity="start"
                        android:hint="Enter Address "
                        android:inputType="textCapWords"
                        android:maxLength="100"
                        android:maxLines="5"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_20" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_20">


                    <Button
                        android:id="@+id/btnSubmitDetails"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_shape_draw"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Submit "
                        android:textColor="@color/project_yellow_color"
                        android:textSize="@dimen/size_20"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>