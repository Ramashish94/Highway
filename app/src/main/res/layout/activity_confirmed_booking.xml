<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".customer.customerActivity.BookingConfirmedActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@drawable/back_arrow_icon"
            app:subtitle="Booking Confirmed"
            app:title="Trip #HIG5655657" />


    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomSheet"
        android:layout_below="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:elevation="@dimen/margin_3"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/rounded_corner_shape"
                android:elevation="@dimen/margin_3"

                android:orientation="horizontal"
                android:padding="@dimen/_10dp">

                <TextView
                    android:id="@+id/sourceTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="GaurGaurGaurGaurGaurGaurGaurGaur City 2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:rotation="180"
                    app:srcCompat="@drawable/back_arrow_icon" />

                <TextView
                    android:id="@+id/destTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="@dimen/_10dp"
                    android:text="GaurGaurGaurGaurGaurGaurGaurGaurGaurGaur City 2" />

            </LinearLayout>

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dropAdd"

            android:layout_gravity="center" />

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/_10dp">

            <ImageView
                android:id="@+id/imgIV"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/_10dp"
                app:srcCompat="@drawable/truck" />

            <LinearLayout
                android:id="@+id/driverInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/callActionIV"
                android:layout_toEndOf="@+id/imgIV"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tata Ace - UP 73 BV 8987"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/driverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Searching for driver...."
                    android:textColor="@color/quantum_grey700" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="Booking will get cancelled if not allocated in  "
                            android:textColor="@color/red"
                            android:textSize="12sp" />


                    <TextView
                        android:id="@+id/bookingInfoForDriverAllocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="10:00"
                        android:textColor="@color/red"
                        />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/callActionIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10dp"
                android:tint="@color/colorAccent"
                android:visibility="gone"
                app:srcCompat="@drawable/phone_call" />
        </RelativeLayout>


        <View
            android:id="@+id/detailViewLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/details"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@color/quantum_grey" />

        <RelativeLayout
            android:id="@+id/fareDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailViewLine"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10">

            <ImageView
                android:id="@+id/cashIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/money_icon" />

            <TextView
                android:id="@+id/fareValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_toEndOf="@+id/cashIV"
                android:text="INR 565   Cash"
                android:textColor="@color/black" />
        </RelativeLayout>


        <View
            android:id="@+id/fareLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/fareDetails"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@color/quantum_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fareLine"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelTripTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CANCEL BOOKING"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".01"
                android:background="@color/quantum_grey100" />

            <TextView
                android:id="@+id/tripInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="INFO"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>