                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtMobNo"
                                android:layout_width="300dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="9988776655"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/phoneIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/txtMobNo"
                                android:padding="2dp"
                                android:src="@drawable/ic_local_phone_call" />


                            <View
                                android:layout_width="320dp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/txtMobNo"
                                android:background="@color/app_bg_color" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/CheckSender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/txtsameAsSender"
                                android:src="@drawable/ic_delete_24dp" />

                            <TextView
                                android:id="@+id/txtsameAsSender"
                                android:layout_width="270dp"
                                android:layout_height="30dp"
                                android:layout_toRightOf="@+id/CheckSender"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Same as sender"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

