<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".activity.ConfirmBooking">

    <LinearLayout
        android:id="@+id/linearConFormPage1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ConformToolBar"
        android:layout_marginLeft="@dimen/margin_left_5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right_5"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/HelperConformImg1"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_helper_person1_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Helpers Required"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:text="Helper's change is not included in hear" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/HelperPerson2"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toRightOf="@+id/CountHealperPerson"
                android:src="@drawable/ic_helper_person2_black_24dp" />

            <ImageView
                android:id="@+id/ChooseNoOfHelperPerson"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_toRightOf="@+id/HelperPerson2"
                android:paddingLeft="@dimen/padding_5"
                android:src="@drawable/ic_expand_more_broun_24dp" />

            <TextView
                android:id="@+id/CountHealperPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_top_10"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <!--Choose number of Healper person-->
    <LinearLayout
        android:id="@+id/ChooseNoOfHealperPerson"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/linearConFormPage1"
        android:layout_marginLeft="@dimen/margin_left_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_right_5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_helper_person1_black_24dp" />


        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_helper_person2_black_24dp" />
    </LinearLayout>

    <!--Pick Up Location -->
    <LinearLayout
        android:id="@+id/linearConFormPage2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ChooseNoOfHealperPerson"
        android:layout_marginLeft="@dimen/margin_left_5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right_5"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/PickConformImg1"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/padding_left_15"
            android:src="@drawable/ic_lens_green_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bangalore_international_airport_pvt_ltd"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PickUp at" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:inputType="date"
                    android:text="24 Augest 2019"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="04:42 PM"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--Drop location -->
    <LinearLayout
        android:id="@+id/linearConFormPage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearConFormPage2"
        android:layout_marginLeft="@dimen/margin_left_5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right_5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_10dp">

        <ImageView
            android:id="@+id/DropConformImg2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_left_15"
            android:layout_marginTop="@dimen/margin_top_15"
            android:src="@drawable/ic_lens_red_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <ImageView
                        android:id="@+id/DropFabImgCnfBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/DropTextCnfBooking"
                        android:padding="2dp"
                        android:src="@drawable/ic_favorite_in_pick_up_location_24dp" />

                    <TextView
                        android:id="@+id/DropTextCnfBooking"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Pune_Airport"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/DropTextCnfBooking"
                        android:background="@color/app_bg_color" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/RajTxtIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/txtRaj"
                        android:padding="2dp"
                        android:src="@drawable/ic_contact_phone_black_24dp" />

                    <TextView
                        android:id="@+id/txtRaj"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Raj"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtRaj"
                        android:background="@color/app_bg_color" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtMobNo"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="9988776655"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtMobNo"
                        android:background="@color/app_bg_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/CheckSender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txtsameAsSender"
                        android:src="@drawable/ic_delete_24dp" />

                    <TextView
                        android:id="@+id/txtsameAsSender"
                        android:layout_width="270dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/CheckSender"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Same as sender"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearCnfDropPage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/linearConFormPage3"
        android:layout_marginLeft="@dimen/margin_left_5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_right_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/DropAnotherLocation"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/padding_left_15"
            android:src="@drawable/ic_add_another_drop_location_24dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_right_25"
            android:text="@string/bangalore_international_airport_pvt_ltd"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:background="@color/app_bg_color" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_favorite_in_pick_up_location_24dp"
           android:layout_marginLeft="@dimen/padding_left_15"/>
    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/ConformToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/conformBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_icon" />

        <TextView
            style="@style/CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_120"
            android:gravity="center"
            android:text="Conform Booking"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>


</RelativeLayout>