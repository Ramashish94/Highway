            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="250dp">

            <LinearLayout
                android:id="@+id/linearConFormPage1"
                android:layout_width="390dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_left_5"

                android:layout_marginRight="@dimen/margin_right_5"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/HelperConformImg1"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_helper_person1_black_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Helpers Required"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:text="Helper's change is not included in hear"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/HelperPerson2"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_toRightOf="@+id/CountHealperPerson"
                        android:src="@drawable/ic_helper_person2_black_24dp" />

                    <ImageView
                        android:id="@+id/ChooseNoOfHelperPerson"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_toRightOf="@+id/HelperPerson2"
                        android:paddingLeft="@dimen/padding_5"
                        android:src="@drawable/ic_expand_more_broun_24dp" />

                    <TextView
                        android:id="@+id/CountHealperPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_top_10"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <!--Choose number of Healper person-->
            <LinearLayout
                android:id="@+id/ChooseNoOfHealperPerson"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/linearConFormPage1"
                android:layout_marginLeft="@dimen/margin_left_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_right_5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_helper_person1_black_24dp" />


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@drawable/ic_helper_person2_black_24dp" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@drawable/ic_helper_person2_black_24dp" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@drawable/ic_helper_person2_black_24dp" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@drawable/ic_helper_person2_black_24dp" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@drawable/ic_helper_person2_black_24dp" />

