<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:elevation="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_10"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/username"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/circle_margin_15"
                android:layout_width="match_parent"
                android:text="user name"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/startdate"
                android:layout_width="match_parent"
                android:text="startdate"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/enddate"
                android:layout_width="match_parent"
                android:text="enddate"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/pickuptime"
                android:layout_width="match_parent"
                android:text="pickuptime"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/droptime"
                android:layout_width="match_parent"
                android:text="droptime"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/Vechilename"
                android:layout_width="match_parent"
                android:text="Vechilename"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/vechilenumber"
                android:layout_width="match_parent"
                android:text="vechilenumber"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/fare"
                android:layout_width="match_parent"
                android:text="fare"
                android:layout_height="wrap_content"/>


        </LinearLayout>






    </androidx.cardview.widget.CardView>

</LinearLayout>