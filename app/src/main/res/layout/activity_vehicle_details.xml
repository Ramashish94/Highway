<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VehicleRcDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/project_color"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/backArrow_Vihal_Rc_Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_arrow_back_white_24dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Photo of Vehical registration certificate"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="60dp"
                android:text="Please make sure that we can easily read all details."
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            android:background="@color/app_bg"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            >

             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:layout_gravity="center"
                 android:layout_margin="@dimen/margin_10"
                 android:background="@color/app_bg">

            <!-- Capture Image hear  -->
            <ImageView
                android:id="@+id/Vichiel_RC_ImageviewFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c7c7c8"
                android:scaleType="fitXY"

                />

            <!--  <ImageView
                   android:id="@+id/drivingLicenceback"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/margin_30"
                   android:background="#c7c7c8"
                  android:visibility="gone"
                   />  -->

            <TextView
                android:id="@+id/Vehical_Rc_txt_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#c7c7c8"
                android:text="@string/preview_description"
                android:textSize="15dp"
                android:visibility="gone"/>


              </FrameLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/VehicleEditOpen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_10dp"
                android:background="@drawable/circle_camera_open"
                android:src="@drawable/pencilicon"
                android:tint="@color/Black"
                />
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/margin_30">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/Vehicle_Rc_Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Vehicle/Rc Number"
                        android:maxLines="1"
                        android:maxLength="14"
                        android:textColorHint="@color/black"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/Vehicle_Rc_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Vehicle Color"
                        android:textColorHint="@color/black"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="15dp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/sub_Vehicle_Rc_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_top_30"
            android:layout_marginBottom="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@color/project_color"
            android:text="Submit"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>