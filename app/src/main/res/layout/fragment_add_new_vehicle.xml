                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp" />

                    </LinearLayout>
                </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10"
                android:paddingLeft="5sp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/EdtVehicleDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_height_100"
                android:background="@drawable/completed_fragment_item_shape"
                android:gravity="top|left"
                android:hint=" descripition"
                android:inputType="textMultiLine"
                android:maxLength="250"
                android:maxLines="15"
                android:paddingLeft="5sp"
                android:text="@string/newline" />


            <Button
                android:id="@+id/BtnAddNewVehicle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_30"
                android:background="@drawable/btn_shape_draw"
                android:paddingLeft="@dimen/padding_left_40dp"
                android:paddingRight="@dimen/padding_right_40dp"
                android:text="Add New Vehicle "
                android:textColor="@color/project_yellow_color" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

