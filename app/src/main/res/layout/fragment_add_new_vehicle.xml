            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10"
                android:paddingLeft="5sp"
                android:text="Vehicle Number "
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/EdtTxtVehicleNos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35"
                android:background="@drawable/completed_fragment_item_shape"
                android:hint="enter vehicle number"
                android:inputType="textCapSentences"
                android:paddingLeft="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10"
                android:paddingLeft="5sp"
                android:text="Vehicle Model"
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/EdtTxtvehicleModelNos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/completed_fragment_item_shape"
                android:hint="enter vehicle model"
                android:inputType="textCapWords"
                android:paddingLeft="5sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10"
                android:paddingLeft="5sp"
                android:text="Vehicle Type "
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/completed_fragment_item_shape">

                <Spinner
                    android:id="@+id/VehicleTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_10"
                    android:paddingLeft="5sp"
                    android:text="Vehicle Load Capicity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_20"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/completed_fragment_item_shape">

                    <Spinner
                        android:id="@+id/VehicleLoadCapicitySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>
                <!-- <EditText
                     android:id="@+id/EdtTxtVehileLoadCapicity"
                     android:layout_width="match_parent"
