<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".customer.customerActivity.VehicleList">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/margin_100"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:minWidth="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tataAceTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tata Ace"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/vehicleImg1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/truck" />

            <TextView
                android:id="@+id/timeDurationTv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8 mins"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/faireChargeTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Rs_one1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/infoImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="2.5sp"
                    app:srcCompat="@drawable/info_icon" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>