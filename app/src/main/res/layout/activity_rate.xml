<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.videoapp.activities.RateUsActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Rate Us"
        android:fontFamily="@font/josefin_regular"
        android:textSize="20dp"
        android:background="@color/red"/>

    <TextView
        android:id="@+id/tv_custom_rateus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/josefin_regular"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:text="@string/rating_feed"
       />
    <RatingBar
        android:id="@+id/rb_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/josefin_regular"
            android:text="Rate it Now" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="@font/josefin_regular"
            android:text="No Thanks" />

        <Button
            android:id="@+id/btn_rml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/josefin_regular"
            android:text="Rimind me later" />
    </LinearLayout>
</LinearLayout>