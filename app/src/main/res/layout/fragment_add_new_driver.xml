        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5sp"
            android:text="Address "
            android:textColor="@color/black"
            android:textSize="@dimen/size_15"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/EdtTxtEnterDriverAdd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_height_80"
            android:background="@drawable/completed_fragment_item_shape"
            android:gravity="top|left"
            android:layout_marginTop="5dp"
            android:hint="Enter driver address  "
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:maxLines="5"
            android:paddingLeft="5sp"
            android:text="@string/newline" />


        <Button
            android:id="@+id/BtnAddNewDriver"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/margin_top_30"
            android:background="@drawable/btn_shape_draw"
            android:paddingLeft="@dimen/padding_left_40"
            android:paddingRight="@dimen/padding_right_40"
            android:text="Add New Driver "
            android:textColor="@color/project_yellow_color" />
    </LinearLayout>
    </ScrollView>

</LinearLayout>