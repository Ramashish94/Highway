<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:paddingTop="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/UpcomingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="30 Aug"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_top_5">

                <ImageView
                    android:id="@+id/UpcomingImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_lens_green_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/margin_180"
                android:layout_height="@dimen/margin_top_60dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UpcomingPickUpAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="IBM India Pvt Ltd D3 Block Vittal Mallya rd ,Kg Halli,D'Souza Layout ,Ashok"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/UpcomingVehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TATA ACE "
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="@color/app_bg_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/UpcomingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:45 PM"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <!--<TimePicker
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:timePickerMode="clock">
                </TimePicker>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_5">

                <ImageView
                    android:id="@+id/UpcomingDeliverImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_lens_red_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="@dimen/margin_top_60dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UpcomingDeliverAddress"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="IBM India Pvt Ltd D3 Block Vittal Mallya rd ,Kg Halli,D'Souza Layout ,Ashok"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/UpcomingIndication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_shape_green"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_gravity="center_vertical"
                    android:text="UPCOMING "
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

