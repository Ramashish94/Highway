                    android:layout_below="@+id/effectSepia"
                    android:layout_centerInParent="true"
                    android:text="@string/sepia"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/effectSolarize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:onClick="colorEffectFilter"
                    android:src="@drawable/ic_solarize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/effectSolarize"
                    android:layout_centerInParent="true"
                    android:text="@string/solarize"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/effectWhiteboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:onClick="colorEffectFilter"
                    android:src="@drawable/ic_whiteboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/effectWhiteboard"
                    android:layout_centerInParent="true"
                    android:text="@string/whiteboard"
                    android:textSize="18sp" />
            </RelativeLayout>


        </LinearLayout>

        <!--<RadioGroup
            android:id="@+id/record_filter_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </RadioGroup>-->

    </HorizontalScrollView>

</LinearLayout>