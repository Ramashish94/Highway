<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/notification"
    android:layout_height="match_parent"
    tools:context="com.videoapp.activities.My_vedio_edit_profife">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-170dp"
            app:srcCompat="@drawable/arrow"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lin6"
            android:layout_below="@+id/lin5">
            <ImageView
                android:id="@+id/payim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-20dp"
                app:srcCompat="@drawable/wallet"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/paytm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/josefin_regular"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Paytm" />
            <TextView
                android:id="@+id/ptmtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="70dp"
                android:fontFamily="@font/josefin_regular"
                android:textColor="#b4aeae"
                android:text="Link" />
            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-20dp"
                app:srcCompat="@drawable/arrow"
                />
        </LinearLayout>

    <ImageView
        android:id="@+id/pofile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-120dp"
        app:srcCompat="@drawable/user_profile"
        tools:ignore="VectorDrawableCompat" />
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-90dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/notification"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_regular"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textSize="15dp"
                        android:fontFamily="@font/josefin_regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/notification"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="15dp"
                        android:fontFamily="@font/josefin_regular"
                        android:textColor="@color/black"
                         />

                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow"
                        android:textSize="15dp"
                        android:fontFamily="@font/josefin_regular"
                        android:textColor="@color/black"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/notification"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="15dp"
                        android:fontFamily="@font/josefin_regular"
                        android:textColor="@color/black"
                         />

                    <TextView
                        android:id="@+id/flame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flames"
                        android:textSize="15dp"
                        android:fontFamily="@font/josefin_regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
        android:id="@+id/logout_"
        android:layout_width="100dp"
            android:background="@drawable/followbuttonback"
            android:fontFamily="@font/josefin_regular"
        android:layout_height="50dp"
            android:layout_marginTop="10dp"
        android:text="Edit Profile"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fddf1d"
        android:textSize="14sp"
        android:textStyle="bold" />
        <Button
            android:id="@+id/flames_"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Flames"
            android:background="@drawable/flame"
            android:fontFamily="@font/josefin_regular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-50dp"
            android:textColor="#fddf1d"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/yourself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/josefin_regular"
            android:layout_marginLeft="-120dp"
            android:text="Tell follwers about yourself" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/v"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/vedio"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/ve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/josefin_regular"
                android:layout_marginLeft="-90dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="vedio" />
            <ImageView
                android:id="@+id/f"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/fvrt"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/fvrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/josefin_regular"
                android:layout_marginLeft="-90dp"
                android:textColor="@color/black"
                android:text="vedio" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dad5d5"
            android:orientation="horizontal">
    </LinearLayout>
    </LinearLayout>
</LinearLayout>